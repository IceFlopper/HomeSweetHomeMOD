<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThoughtDef>
        <defName>MissedCaravanMember</defName>
        <durationDays>15</durationDays>
        <stackLimit>1</stackLimit>
        <thoughtClass>Thought_Memory</thoughtClass>
        <label>missed a caravan member</label>
        <baseMoodEffect>-5</baseMoodEffect>
        <stageCount>15</stageCount>
        <stages>
            <li>
                <label>misses a caravan member</label>
                <baseMoodEffect>-5</baseMoodEffect>
            </li>
            <li>
                <label>really misses a caravan member</label>
                <baseMoodEffect>-10</baseMoodEffect>
            </li>
            <li>
                <label>desperately misses a caravan member</label>
                <baseMoodEffect>-15</baseMoodEffect>
            </li>
            <!-- Continue adding stages up to 15 days -->
        </stages>
    </ThoughtDef>
    <ThoughtDef>
        <defName>CaravanReturned</defName>
        <durationDays>3</durationDays>
        <stackLimit>1</stackLimit>
        <thoughtClass>Thought_Memory</thoughtClass>
        <label>happy a caravan member returned</label>
        <baseMoodEffect>10</baseMoodEffect>
        <stageCount>1</stageCount>
        <stages>
            <li>
                <label>happy a caravan member returned</label>
                <baseMoodEffect>10</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
</Defs>
